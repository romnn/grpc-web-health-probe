{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "allowJs": true,
    "lib": ["dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
